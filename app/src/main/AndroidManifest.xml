<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalproject.frosch">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinanceApp">
        <activity android:name="com.finalproject.frosch.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.finalproject.frosch.activities.AddPostActivity"
            android:theme="@style/Theme.FinanceApp" />
        <activity android:name=".activities.UpdatePostActivity"
            android:theme="@style/Theme.FinanceApp"/>
    </application>

</manifest>